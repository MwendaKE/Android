<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT EVENT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp" />

        <!-- Basic Info Section -->
        <EditText
            android:id="@+id/eventTitleEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter event title.."
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/eventDateEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Select event date..."
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/eventTimeEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Select event time..."
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/eventAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter event address.."
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/eventBudgetEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter event budget amount.."
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/eventAttendanceEditSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <!-- Media Sections -->
        <!-- Audio Section -->
        <LinearLayout
            android:id="@+id/eventAudioEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_border"
            android:padding="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/eventAudioTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/eventAudioEditContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#EEEEEE"/>
            </HorizontalScrollView>

            <EditText
                android:id="@+id/eventAudioEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Add audio..."
                android:background="@drawable/edit_text_border"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginBottom="0dp"
                android:focusable="false"
                android:clickable="true" />
        </LinearLayout>

        <!-- Video Section -->
        <LinearLayout
            android:id="@+id/eventVideosEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_border"
            android:padding="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/eventVideosTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos"
                android:textStyle="bold" 
                android:layout_marginBottom="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/eventVideosEditContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#EEEEEE"/>
            </HorizontalScrollView>

            <EditText
                android:id="@+id/eventVideoEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Add video..."
                android:background="@drawable/edit_text_border"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginBottom="0dp"
                android:focusable="false"
                android:clickable="true" />
        </LinearLayout>

        <!-- Images Section -->
        <LinearLayout
            android:id="@+id/eventImagesEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_border"
            android:padding="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/eventImagesTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Images"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/eventImagesEditContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#EEEEEE"/>
            </HorizontalScrollView>
			
			<EditText
				android:id="@+id/eventImageEdit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Add image..."
				android:background="@drawable/edit_text_border"
				android:textSize="18sp"
				android:padding="10dp"
				android:layout_marginBottom="10dp"
				android:focusable="false"
				android:clickable="true" />
        </LinearLayout>

        <!-- Notes Section -->
        <EditText
            android:id="@+id/eventNotesEdit"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:hint="Enter your event notes.."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:background="@drawable/edit_text_border"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="top|start"
            android:layout_marginBottom="10dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/eventSaveEditBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="UPDATE EVENT"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_background"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
