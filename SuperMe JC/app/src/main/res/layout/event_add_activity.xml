<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="20dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="NEW EVENT"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@color/colorPrimary"
			android:layout_marginBottom="20dp" />

		<EditText
			android:id="@+id/eventTitleAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Enter event title.."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"/>

		<EditText
			android:id="@+id/eventDateAdd"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:hint="Select event date..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:layout_marginBottom="10dp"
			android:padding="10dp"
			android:focusable="false"
			android:clickable="true" />

		<EditText
			android:id="@+id/eventTimeAdd"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:hint="Select event time..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:layout_marginBottom="10dp"
			android:padding="10dp"
			android:focusable="false"
			android:clickable="true" />
		
		<EditText
			android:id="@+id/eventAddressAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Enter event address.."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"/>
		
		<EditText
			android:id="@+id/eventBudgetAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Enter event budget amount.."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:inputType="numberDecimal"
			android:layout_marginBottom="10dp"/>
		
		<Spinner
			android:id="@+id/eventAttendanceAddSpinner"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:layout_marginBottom="10dp"/>
		
		<!-- MEDIA BUTTONS -->

		<EditText
			android:id="@+id/eventImageAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Add images..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"
			android:focusable="false"
			android:clickable="true" />

		<EditText
			android:id="@+id/eventVideoAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Add videos..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"
			android:focusable="false"
			android:clickable="true" />

		<EditText
			android:id="@+id/eventAudioAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Add voices..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"
			android:focusable="false"
			android:clickable="true" />

		<!-- END -->

		<EditText
			android:id="@+id/eventNotesAdd"
			android:layout_width="match_parent"
			android:layout_height="400dp"
			android:hint="Enter your event notes.."
			android:inputType="textMultiLine"
			android:minLines="3"
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:gravity="top|start"
			android:layout_marginBottom="10dp"/>

		<Button
			android:id="@+id/eventSaveAddBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="SAVE EVENT"
			android:textColor="@android:color/white"
			android:background="@drawable/rounded_button_background"
			android:layout_marginTop="10dp"/>

	</LinearLayout>
</ScrollView>


