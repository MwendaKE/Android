<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sparkDialogVideoContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <VideoView
        android:id="@+id/sparkDialogVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Play button overlay (shown when video is paused) -->
    <ImageButton
        android:id="@+id/sparkDialogPlayBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@android:drawable/ic_media_play"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:alpha="0.8"
        android:scaleType="centerInside" />

    <!-- Controls container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp">

        <!-- Thin seek bar with margins -->
        <SeekBar
            android:id="@+id/sparkDialogSeekBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="1000"
            android:progressDrawable="@drawable/video_seek_bar_maroon"
            android:thumb="@drawable/video_seekbar_thumb"
            android:background="@android:color/transparent" />

        <!-- Time controls container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_pause"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/txtCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@android:color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/txtTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Close button -->
    <ImageButton
        android:id="@+id/sparkDialogCloseBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Close Video" />
</FrameLayout>
