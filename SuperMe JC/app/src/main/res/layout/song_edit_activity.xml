<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT SONG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/songEditTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter song title..."
        android:background="@drawable/edit_text_border"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="10dp"
		android:background="@drawable/edit_text_border"
		android:padding="5dp">

		<Spinner
			android:id="@+id/songEditAuthorSpinner"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:textSize="18sp"
			android:padding="10dp"/>

		<ImageButton
			android:id="@+id/btnEditSongAuthor"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:background="@android:color/transparent"
			android:scaleType="fitCenter"
			android:padding="8dp"
			android:src="@drawable/ic_add"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="10dp"
		android:background="@drawable/edit_text_border"
		android:padding="5dp">

		<Spinner
			android:id="@+id/songEditCategorySpinner"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:textSize="18sp"
			android:padding="10dp"/>

		<ImageButton
			android:id="@+id/btnEditSongCategory"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:background="@android:color/transparent"
			android:scaleType="fitCenter"
			android:padding="8dp"
			android:src="@drawable/ic_add"/>
	</LinearLayout>
	
	<!-- Audio Section -->

	<LinearLayout
		android:id="@+id/songsAudioEditLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/edit_text_border"
		android:padding="16dp"
		android:layout_marginBottom="10dp">

		<TextView
			android:id="@+id/songsAudioTextLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Audio"
			android:textStyle="bold"
			android:layout_marginBottom="5dp"/>

		<LinearLayout
			android:id="@+id/songsAudioEditContainer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="8dp"
			android:background="#EEEEEE"/>
		
		<EditText
			android:id="@+id/songAudioEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Add audio file..."
			android:background="@drawable/edit_text_border"
			android:textSize="18sp"
			android:padding="10dp"
			android:layout_marginBottom="10dp"
			android:focusable="false"
			android:clickable="true" />
	</LinearLayout>
	
    <EditText
        android:id="@+id/songEditLyrics"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:hint="Enter song lyrics..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:background="@drawable/edit_text_border"
        android:textSize="18sp"
        android:gravity="top|start"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/songEditBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE SONG"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_background"
        android:layout_marginTop="10dp"/>

</LinearLayout>
