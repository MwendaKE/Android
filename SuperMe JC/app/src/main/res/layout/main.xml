<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
		android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_editext_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

			<ImageButton
				android:id="@+id/toggle_sidebar"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:background="@android:color/transparent"
				android:src="@drawable/ic_menu_black"
				android:contentDescription="Toggle menu" 
				android:padding="16dp"/>

			<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/customBlack"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:hint="Search..."
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:singleLine="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/customBlack"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <ImageButton
                android:id="@+id/searchImageButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>

        <!-- Grid content area -->
		<GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- FIRST ROW -->

			<!-- Books -->
			<LinearLayout
				android:id="@+id/booksLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_books"/>
				<TextView
					android:id="@+id/booksTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Books"
					android:textSize="18sp" />
			</LinearLayout>

			<!-- Notes -->
			<LinearLayout
				android:id="@+id/notesLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_notes"/>
				<TextView
					android:id="@+id/notesTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Notes"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Quotes -->
			<LinearLayout
				android:id="@+id/quotesLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_quotes"/>
				<TextView
					android:id="@+id/quotesTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Quotes"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- SECOND ROW -->

			<!-- Events -->
			<LinearLayout
				android:id="@+id/eventsLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_events"/>
				<TextView
					android:id="@+id/eventsTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Events"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Diary -->
			<LinearLayout
				android:id="@+id/diaryLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_diary"/>
				<TextView
					android:id="@+id/diaryTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Diary"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Tasks -->
			<LinearLayout
				android:id="@+id/tasksLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_tasks"/>
				<TextView
					android:id="@+id/tasksTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Tasks"
					android:textSize="18sp"/>
			</LinearLayout>


			<!-- THIRD ROW -->

			<!-- Arts -->
			<LinearLayout
				android:id="@+id/artsLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_arts"/>
				<TextView
					android:id="@+id/artsTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Arts"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Sparks -->
			<LinearLayout
				android:id="@+id/sparksLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_sparks"/>
				<TextView
					android:id="@+id/sparksTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Sparks"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Music -->
			<LinearLayout
				android:id="@+id/musicLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_music"/>
				<TextView
					android:id="@+id/musicTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Music"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- FOURTH ROW -->

			<!-- Poems -->
			<LinearLayout
				android:id="@+id/poemLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_poems"/>
				<TextView
					android:id="@+id/poemsTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Poems"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- Clips -->
			<LinearLayout
				android:id="@+id/clipsLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_cut"/>
				<TextView
					android:id="@+id/clipsTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Clips"
					android:textSize="18sp"/>
			</LinearLayout>

			<!-- People -->
			<LinearLayout
				android:id="@+id/peopleLayout"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="10dp">
				<ImageView
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/ic_people"/>
				<TextView
					android:id="@+id/peopleTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="People"
					android:textSize="18sp"/>
			</LinearLayout>
			<!-- -->
		</GridLayout>
    </LinearLayout>

    <!-- Sidebar - MUST be a direct child of DrawerLayout -->
    <ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="250dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#FFFFFF">

		<LinearLayout
			android:id="@+id/sidebar_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="10dp"
			android:elevation="16dp"
			android:clickable="true"
			android:focusable="true">

			<!-- Logo -->
			<ImageView
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:src="@drawable/logo3"
				android:scaleType="fitCenter"
				android:background="@android:color/transparent"
				android:layout_gravity="center" />

			<!-- Divider -->
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/customDividerColor"
				android:layout_marginTop="16dp" />

			<!-- Section Title -->
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="MAIN"
				android:textColor="#60000000"
				android:textSize="16sp"
				android:paddingStart="16dp"
				android:paddingTop="16dp"
				android:paddingBottom="8dp" />

			<!-- NAV BOOKS -->
			<LinearLayout
				android:id="@+id/sideNavBooks"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:src="@drawable/ic_books"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Books"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavBooksCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="2020"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV NOTES -->
			<LinearLayout
				android:id="@+id/sideNavNotes"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">
				
				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_notes"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Notes"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavNotesCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="200"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV QUOTES -->
			<LinearLayout
				android:id="@+id/sideNavQuotes"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_quotes"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Quotes"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavQuotesCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="200"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV EVENTS -->
			<LinearLayout
				android:id="@+id/sideNavEvents"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_events"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Events"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavEventsCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="200"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV DIARY -->
			<LinearLayout
				android:id="@+id/sideNavDiary"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_diary"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Diaries"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavDiaryCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="800"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV TASKS -->
			<LinearLayout
				android:id="@+id/sideNavTasks"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_tasks"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Tasks"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavTasksCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="800"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV ARTICLES -->
			<LinearLayout
				android:id="@+id/sideNavArts"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_arts"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Articles"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavArtsCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="800"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV SPARKS -->
			<LinearLayout
				android:id="@+id/sideNavSparks"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_sparks"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
				<TextView
					android:text="Sparks"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="@color/customBlack" 
					android:layout_marginStart="20dp"/>

				<!-- Badge -->
				<TextView
					android:id="@+id/sideNavSparksCountBadge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:background="@drawable/badge_background"
					android:textSize="11sp"
					android:text="800"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:paddingLeft="6dp"
					android:paddingRight="6dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"/>
			</LinearLayout>
			
			<!-- NAV DIARY -->
			<LinearLayout
				android:id="@+id/sideNavMusic"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:orientation="horizontal"
				android:paddingStart="16dp"
				android:clickable="true"
				android:focusable="true"
				android:background="?android:attr/selectableItemBackground"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:src="@drawable/ic_music"
					android:tint="@color/customMaroon"/>

				<!-- Label -->
