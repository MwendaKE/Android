<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Attach custom ActionBar style (you may still want it for background, height, etc.) -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Custom ActionBar Style -->
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <!-- Optional: Change ActionBar background -->
        <!-- <item name="android:background">#212121</item> --> <!-- Uncomment to make ActionBar dark -->
    </style>

    <!-- Base Button Style (shared properties) -->
    <style name="BaseCalcButton">
        <!-- Equal sizing inside GridLayout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>

        <!-- Spacing -->
        <item name="android:layout_margin">5dp</item>

        <!-- Text appearance -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Number Button Style -->
    <style name="NumberButton" parent="BaseCalcButton">
        <item name="android:background">@drawable/rounded_button_number</item>
    </style>

    <!-- Operator Button Style -->
    <style name="OperatorButton" parent="BaseCalcButton">
        <item name="android:background">@drawable/rounded_button_operator</item>
    </style>

    <!-- Function Button Style -->
    <style name="FunctionButton" parent="BaseCalcButton">
        <item name="android:background">@drawable/rounded_button_function</item>
    </style>

    <!-- Equal Button Style -->
    <style name="EqualButton">
        <item name="android:background">@drawable/equal_button_bg</item>
        <item name="android:textColor">#000000</item> <!-- Black text -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
