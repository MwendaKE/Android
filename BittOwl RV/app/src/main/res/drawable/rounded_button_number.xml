<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66FFFFFF"> <!-- Ripple color (semi-transparent white) -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#424242" /> <!-- Button background -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#303030" />
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</ripple>
