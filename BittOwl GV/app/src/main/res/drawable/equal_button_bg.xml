<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000"> <!-- Light black ripple on press -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Dark Yellow -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#CCAA00"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</ripple>
