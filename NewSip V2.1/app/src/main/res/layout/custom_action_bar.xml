<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Original horizontal layout now wrapped -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <!-- Left logo -->
        <ImageView
            android:id="@+id/customLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/ic_logo2"
            android:contentDescription="App Logo"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="8dp" />

        <!-- Spacer to push icons to right -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
		
		<!-- Globe icon -->
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:layout_marginEnd="20dp"
			android:visibility="gone"
            android:contentDescription="Home News Icon" />

        <!-- Globe icon -->
        <ImageView
            android:id="@+id/globeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_language"
            android:layout_marginEnd="20dp"
			android:visibility="gone"
            android:contentDescription="Global News Icon" />

        <!-- Bookmark icon -->
        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark_o22"
            android:layout_marginEnd="20dp"
			android:visibility="gone"
            android:contentDescription="Bookmark Article Icon" />
		
		<!-- Print icon -->
        <ImageView
            android:id="@+id/printIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_print"
			android:layout_marginEnd="20dp"
			android:visibility="gone"
            android:contentDescription="Print Article Icon" />
		
        <!-- Share icon -->
        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
			android:visibility="gone"
            android:contentDescription="Share Article Icon" />
    </LinearLayout>
</LinearLayout>
