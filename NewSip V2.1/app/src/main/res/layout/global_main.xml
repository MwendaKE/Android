<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center">

    <!-- Search bar -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@drawable/search_editext_border"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="10dp"
		android:gravity="center_vertical">

		<EditText
			android:id="@+id/searchInput"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="56dp"
			android:background="@android:color/transparent"
			android:hint="Enter a topic to search..."
			android:textSize="18sp"
			android:textColor="@color/blue_1"
			android:padding="10dp"
			android:singleLine="true" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/blue_1"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp" />

		<ImageButton
			android:id="@+id/searchImageButton"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:background="@android:color/transparent"
			android:scaleType="fitCenter"
			android:padding="8dp"
			android:src="@drawable/ic_search_green" />
	</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/resultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />
	
	<LinearLayout
		android:id="@+id/paginationBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:background="#FFFFFF"
		android:visibility="gone"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/btnPrev"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_left"
			android:background="@android:color/transparent"
			android:contentDescription="Previous Page" />

		<TextView
			android:id="@+id/pageText"
			android:text="Page 1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:textSize="16sp" />

		<ImageButton
			android:id="@+id/btnNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_right"
			android:background="@android:color/transparent"
			android:contentDescription="Next Page" />
	</LinearLayout>
</LinearLayout>

